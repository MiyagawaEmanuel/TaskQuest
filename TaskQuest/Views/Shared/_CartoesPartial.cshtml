@model List<TaskQuest.ViewModels.CartaoViewModel>

@using (Html.BeginForm("Cartoes", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    for (int x = 0; x < Model.Count; x++)
    {
        @Html.HiddenFor(m => Model[x].Id)
        <div class="row">
            <div class="col-md-12 centralize"><input type="submit" value="Editar" class="btn btn-primary btn-lg btn-header darkblue-bg centralize" /></div>
            <div class="col-md-6">@Html.TextBoxFor(m => Model[x].NomeTitular, new { @class = "form-control inputs centralize", required = "" })</div>
            <div class="col-md-6">@Html.TextBoxFor(m => Model[x].Bandeira, new { @class = "form-control inputs centralize", required = "" })</div>
            <div class="col-md-6">@Html.TextBoxFor(m => Model[x].Numero, new { @class = "form-control inputs centralize", required = "" })</div>
            <div class="col-md-6">@Html.TextBoxFor(m => Model[x].CodigoSeguranca, new { @class = "form-control inputs centralize", required = "" })</div>
            <div class="col-md-6">@Html.TextBoxFor(m => Model[x].DataVencimento, new { @class = "form-control inputs centralize", required = "" })</div>
            <div class="col-md-12 centralize">
                <a class="btn btn-primary btn-lg btn-header darkblue-bg centralize" href="/Home/ExcluirCartao/@Model[x].Id">Excluir</a>
            </div>
        </div>
        <hr class="quebra  group-image">
    }
}
