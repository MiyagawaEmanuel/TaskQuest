@model TaskQuest.ViewModels.CartaoViewModel

@using (Html.BeginForm("AdicionarCartao", "Home", FormMethod.Post, new { @id = "cartao" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-6 col-md-6">
            @Html.TextBoxFor(m => m.NomeTitular, new { @class = "form-control inputs centralize", @placeholder="Nome do titular" })
        </div>
        <div class="col-lg-6 col-md-6">
            @Html.TextBoxFor(m => m.Bandeira, new { @class = "form-control inputs centralize", @placeholder="Bandeira do cartão" })
        </div>
        <div class="col-lg-6 col-md-6">
            @Html.TextBoxFor(m => m.Numero, new { @class = "form-control inputs centralize", @placeholder = "Número do cartão" })
        </div>
        <div class="col-lg-6 col-md-6">
            @Html.TextBoxFor(m => m.CodigoSeguranca, new { @class = "form-control inputs centralize", @placeholder = "Código de segurança" })
        </div>
        <div class="col-lg-12 col-md-12">
            @Html.EditorFor(m => m.DataVencimento, new { @class = "form-control inputs centralize", @type = "date" })
        </div>
        <div class="col-lg-12 col-md-12">
            <input type="submit" value="Adicionar" class="btn btn-primary editar">
        </div>
    </div>
}