@model TaskQuest.ViewModels.RegisterViewModel


<form action="/Account/Register" method="post" id="RegisterForm">
    @Html.AntiForgeryToken()
    <div id="modalCadastro" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <div class="logomod"></div>
                    <h4 class="modal-title">Cadastro</h4>
                </div>
                <div class="modal-body">
                    <p>Preencha os campos abaixo para realizar seu cadastro.</p>
                    <div class="col-md-6 inp">
                        <input id="Nome" name="Nome" type="text" class="form-control"
                               placeholder="Nome"/>
                    </div>
                    <div class="col-md-6 inp">
                        <input type="text" id="Sobrenome" name="Sobrenome" class="form-control"
                               placeholder="Sobrenome" />
                    </div>
                    <div class="col-md-6 inp">
                        <input id="RegisterEmail" name="RegisterEmail" type="text" class="form-control"
                               placeholder="Email" />
                    </div>
                    <div class="col-md-6 inp">
                        <input id="ConfirmarEmail" name="ConfirmarEmail" type="text" class="form-control"
                               placeholder="Confirmar Email" />
                    </div>
                    <div class="col-md-6 inp">
                        <input id="RegisterSenha" name="RegisterSenha" type="text" class="form-control"
                               placeholder="Senha"/>
                    </div>
                    <div class="col-md-6 inp">
                        <input type="text" id="ConfirmarSenha" name="ConfirmarSenha" class="form-control"
                               placeholder="Confirme sua senha"/>
                    </div>
                    <div class="col-md-6">
                        <select id="Sexo" name="Sexo" class="form-control">
                            <option value="M">Masculino</option>
                            <option value="F">Feminino</option>
                        </select>
                    </div>
                    <div class="col-md-6 inp">
                        <input id="DataNascimento" name="DataNascimento" type="text" class="form-control" />
                    </div>
                    <div class="col-md-12">
                        <p>Escolha a cor do seu tema.</p>
                        <input type="hidden" name="Cor" id="Cor" value="106494">
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="col-md-12">
                        <input type="submit" class="btn btn-primary btn-lg" value="Cadastrar" />
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>