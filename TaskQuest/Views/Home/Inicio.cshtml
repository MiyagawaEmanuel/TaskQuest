@model TaskQuest.ViewModels.InicioViewModel

@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container">
        <div class="row inicial">
            <div class="col-md-4"><a href="/Home/CriarGrupo">Criar Grupo</a></div>
            <div class="col-md-4"><h1>Grupos</h1></div>
            <div class="col-md-4"><a href="/Home/Grupos">Ver todos</a></div>
        </div>

        <div class="row grupo-nome">
            @foreach (var grupo in Model.Grupos)
            {
                <div class="col-md-3">
                    <div class="row">
                        <a href="/Home/Grupo/@grupo.Id"><div class="col-md-12 grupo-elipse"></div></a>
                        <a href="/Home/Grupo/@grupo.Id"><div class="col-md-12"><h2>@grupo.Nome</h2></div></a>
                    </div>
                </div>}
        </div>
        <hr class="quebra">
    </div>
</section>
