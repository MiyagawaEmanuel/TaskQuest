@model TaskQuest.ViewModels.GrupoViewModel

@{
    ViewBag.Title = "Grupo " + Model.Nome;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section head
{
    @Styles.Render("~/Content/geral-css")
    @Scripts.Render("~/bundles/grupo-js")
}

<section>
    <div class="container fluid ">
        <div class="row infos2">
            <div><div class="imagem"></div></div>
            <div><h2>@Model.Nome</h2></div>
            <div><p>@Model.Descricao</p></div>
            <div><h3>@Model.Integrantes.Count Integrantes</h3></div>
        </div>
    </div>
    <hr class="quebra group-image">
</section>

<section>
    <div class="container fluid">
        <div id="tabs">
            <ul>
                <li><h3>Integrantes</h3></li>
            </ul>
            <div id="integrantes">
                @for (int x = 0; x < Model.Integrantes.Count; x++)
                {
                    <div class="row teste">
                        <div class="col-md-2 imagem"></div>
                        <h3>@Model.Integrantes[x].Nome</h3>
                        <hr class="quebra">
                    </div>
                }
            </div>
        </div>
    </div>
</section>