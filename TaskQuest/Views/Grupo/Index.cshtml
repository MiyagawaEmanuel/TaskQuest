@model TaskQuest.ViewModels.GrupoViewModel

@{
ViewBag.Title = "Grupo";
}

@section css
{
    <link rel="stylesheet" href="~/Content/css/grupo.css">
    <link rel="stylesheet" href="~/Content/css/spectrum.css">
    <link rel="stylesheet" href="~/Content/js/jquery-ui/jquery-ui.css">
}

@section js
{
    <script src="~/Content/js/spectrum.js"></script>
    <script src="~/Content/js/canvas/canvasjs.min.js"></script>
    <script src="~/Content/js/graphics.js"></script>
    <script src="~/Content/js/spectrum.config.js"></script>
    <script src="~/Content/js/jquery-ui/jquery-ui.js"></script>
    <script src="~/Content/js/tabs.js"></script>
    <script src="~/Content/js/link.js"></script>
}

<section class="pads-bot">

    <div class="flex-properties-r">
        <div class="title-a"><h2>Grupo Bom Gosto</h2></div>
        <div class="title-b flex-properties-r">
            <div class="flex-properties-r pads icon-black">
                @Html.Partial("_LinkPartial", Html.LinkViewModel("SairGrupo", Model.Grupo.Id.ToString(), "/Grupo/SairGrupo"))
                <a onclick="link(SairGrupo)"><i class="fa fa-plus elipse" aria-hidden="true"></i></a>
                <h3><a onclick="link(SairGrupo)">Sair do Grupo</a></h3>
            </div>
        </div>
    </div>

</section>

<section>
    <div class="container">
        <div id="chartContainer"></div>
    </div>
</section>

<hr class="container quebra">

<section class="container flex-properties-g">
    <div>
        <div class="grupo-elipse" style="background-color: @Model.Grupo.Cor"><img alt="Grupo" src="~/Content/img/groupicon.png"></div>
    </div>
    <div><h3>@Model.Grupo.Nome</h3></div>
    @if (@Model.Integrantes.Count == 1)
    {
        <div><h3>@Model.Integrantes.Count Integrante</h3></div>
    }
    else
    {
        <div><h3>@Model.Integrantes.Count Integrantes</h3></div>
    }
    
</section>

<hr class="container quebra">

<section class="container">
    <div id="tabs">
        <ul>
            <li><a href="#integrantes">Integrantes</a></li>
            <li><a href="#quests" lang="en">Quests</a></li>
        </ul>
        <div id="integrantes">
            @foreach (var integrante in Model.Integrantes)
            {
                <h4 data-target="#modalOpcoesIntegrantes" data-toggle="modal">&bull; @integrante.Item2.Nome</h4>
            }
        </div>

        <div id="quests">
            @for (int x = 0; x < Model.Grupo.Quests.Count; x++)
            {
                <div class="quest-container icon-black questlist-g">
                    <i class="fa fa-circle bull" aria-hidden="true"></i>
                    @Html.Partial("_LinkPartial", Html.LinkViewModel("Grupo" + x, Model.Grupo.Quests.ToList()[x].Id.ToString(), "/Quest"))
                    <a onclick="link(@Html.LinkId("Grupo"+x))"><h4 class="quest-container">@Model.Grupo.Quests.ToList()[x].Nome</h4></a>
                </div>
            }
        </div>
    </div>
</section>

<hr class="container quebra">


