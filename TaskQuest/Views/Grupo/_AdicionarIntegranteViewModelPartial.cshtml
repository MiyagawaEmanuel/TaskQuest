@model TaskQuest.ViewModels.AdicionarIntegranteViewModel

<div class="modal fade" id="modalAdicionarIntegrante" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title" id="exampleModalLabel">Adicionar Integrante</h1>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<form id="formAdicionarIntegrante" action="/Grupo/AdicionarIntegrante" method="post">
				<input type="hidden" name="gru_id" value="@Model.gru_id">
				<div class="modal-body">
					<div class="form-group">
						<input class="form-control" id="EmailIntegrante" name="EmailIntegrante" placeholder="E-mail">
						<label for="EmailIntegrante"></label>
					</div>
				</div>
				<div class="modal-footer">
					<input id="AdicionarIntegrante" type="submit" class="btn btn-secondary btn-cg" value="Adicionar">
				</div>
			</form>
		</div>
	</div>
</div>